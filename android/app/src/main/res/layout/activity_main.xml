<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/discoveryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discoveryButton"
        android:visibility="gone" />

    <Button
        android:id="@+id/printButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/printingButton"
        android:visibility="gone" />

    <Button
        android:id="@+id/monitorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monitorButton"
        android:visibility="gone" />

    <Button
        android:id="@+id/statusButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/statusButton"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/tynepunklogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:capitalize="none"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Star Micronics Printer Test App"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:padding="10dip"
            android:src="@drawable/logo_01" />

        <TextView
            android:id="@+id/textViewb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="This app demonstates printing to Bluetooth Star Micronics printers from Flutter. It has only been tested on the SM-T300i Series but most of them should work since the code is based on the official SDK."
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewb2"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:layout_margin="10dip"
            android:background="#3700B2"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="PLEASE WAIT, DISCOVERY AND PRINTING WILL AUTOMATICALLY TAKE PLACE"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:padding="0dip"
                android:text="Developed by Gareth Murfin"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:padding="0dip"
                android:text="www.garethmurfin.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
